{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MapConfig",
  "type": "object",
  "properties": {
    "enabled": { "type": "boolean", "default": true },
    "defaultCenter": {
      "type": "object",
      "properties": {
        "lat": { "type": "number" },
        "lng": { "type": "number" }
      },
      "required": ["lat", "lng"]
    },
    "defaultZoom": { "type": "integer", "minimum": 1, "maximum": 20 }
  },
  "additionalProperties": false
}
